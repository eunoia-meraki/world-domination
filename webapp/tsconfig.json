{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "outDir": "./build/",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "baseUrl": "src",
    "rootDir": "./",
    "jsx": "react-jsx",
  },
  "include": [
    "./src/**/*",
    "webpack.config.ts",
    "babel.config.ts",
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}
